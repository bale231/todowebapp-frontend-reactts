{
  "name": "todoapp",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "description": "ToDoApp - Gestisci le tue attivita",
  "author": "ToDoApp Team",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "npx tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "npx vite & npx electron .",
    "electron:build": "npm run build && npx electron-builder",
    "electron:build:win": "npm run build && npx electron-builder --win",
    "electron:build:mac": "npm run build && npx electron-builder --mac",
    "electron:build:linux": "npm run build && npx electron-builder --linux"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "dexie": "^4.3.0",
    "firebase": "^12.4.0",
    "frontend": "file:",
    "gsap": "^3.12.7",
    "lucide-react": "^0.501.0",
    "react": "^19.0.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^24.3.3",
    "@types/react": "^19.0.10",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-pwa": "^1.0.0"
  },
  "build": {
    "appId": "com.todoapp.desktop",
    "productName": "ToDoApp",
    "electronVersion": "33.0.0",
    "directories": {
      "output": "release"
    },
    "asar": false,
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/assets/apple-touch-icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/apple-touch-icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/assets/apple-touch-icon.png",
      "category": "Office"
    }
  }
}
